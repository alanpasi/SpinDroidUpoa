<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alanpasi.spindroidupoa.AddRide"
    tools:showIn="@layout/activity_add_ride">

    <TextView
        android:id="@+id/rideDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Data "
        android:inputType="datetime" />

    <EditText
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rideDate"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="DistÃ¢ncia"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distance"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Valor total"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Quantidade"
        android:inputType="number" />

    <EditText
        android:id="@+id/totalHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Total de horas "
        android:inputType="number" />

    <EditText
        android:id="@+id/totalMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalHours"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Total de minutos"
        android:inputType="number" />

</LinearLayout>
