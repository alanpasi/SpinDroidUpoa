<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resume"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alanpasi.spindroidupoa.Resume">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Dados"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <View
                android:id="@+id/line_dados"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lblDistance"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/line_dados"
                android:text="Viagens"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/quantity"
                android:text="Pagamento"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/payment"
                android:text="Distância"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/distance"
                android:text="Horas"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/quantityDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/timeHour"
                android:text="Dias"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/lblMedias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/quantityDays"
                android:text="Médias"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <View
                android:id="@+id/line_medias"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lblMedias"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/reaisByDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/line_medias"
                android:text="Reais/Dia"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reaisByDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/reaisByDay"
                android:text="Reais/Distância"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reaisByHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/reaisByDistance"
                android:text="Reais/Hora"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblgas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/reaisByHour"
                android:text="Combustível"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <View
                android:id="@+id/line_gas"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lblgas"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/line_gas"
                android:text="Combustível"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gaspercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/gas"
                android:text="Percentual"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gasbyday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/gaspercent"
                android:text="Reais/Dia"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gasbydistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/gasbyday"
                android:text="Reais/Distância"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lblIndice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/gasbydistance"
                android:text="Desempenho"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <View
                android:id="@+id/line_indice"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lblIndice"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/indice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/line_indice"
                android:text="Índice"
                android:textSize="18sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
