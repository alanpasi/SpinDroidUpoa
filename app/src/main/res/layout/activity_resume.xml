<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resume"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alanpasi.spindroidupoa.Resume">

    <TextView
        android:id="@+id/lblDayQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Quantidade de dias"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dayQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblTotalEarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDayQuantity"
        android:text="Total de ganhos"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalEarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dayQuantity"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblTotalExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblTotalEarn"
        android:text="Total de despesas"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/totalEarn"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblTotalOnlineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblTotalExpenses"
        android:text="Total de tempo OnLine"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalOnlineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/totalExpenses"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblTotalRides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblTotalOnlineTime"
        android:text="Total de viagens"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/totalRides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/totalOnlineTime"
        android:text="0"
        android:textSize="24sp" />
</RelativeLayout>
